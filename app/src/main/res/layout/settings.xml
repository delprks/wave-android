<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="@color/black"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ECF0F1"
            android:textSize="30sp"
            android:text="WebDav Settings" />

        <TextView
            android:id="@+id/settings_webdav_name_title"
            android:layout_below="@id/settings_title"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ECF0F1"
            android:textSize="16sp"
            android:text="Name:" />

        <EditText
            android:id="@+id/settings_webdav_name_value"
            android:hint="@string/webdav_server_name_input_box_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_webdav_name_title"
            android:layout_marginTop="10sp"
            android:width="300dp"
            android:height="48dp"
            android:background="#ECF0F1"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/settings_webdav_host_title"
            android:layout_below="@id/settings_webdav_name_value"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ECF0F1"
            android:textSize="16sp"
            android:text="WebDav Host:" />

        <EditText
            android:id="@+id/settings_webdav_host_value"
            android:hint="@string/remote_host_input_box_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_webdav_host_title"
            android:layout_marginTop="10sp"
            android:width="300dp"
            android:height="48dp"
            android:background="#ECF0F1"
            android:ems="10"
            android:textColor="@color/black"
            android:text="https://www.example.com"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/settings_webdav_media_path_title"
            android:layout_below="@id/settings_webdav_host_value"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ECF0F1"
            android:textSize="16sp"
            android:text="WebDav media path:" />

        <EditText
            android:id="@+id/settings_webdav_media_path_value"
            android:hint="@string/remote_media_path_input_box_hint"
            android:layout_below="@id/settings_webdav_media_path_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#ECF0F1"
            android:height="48dp"
            android:width="300dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="/fs/media/Audio"
            android:ems="10" />

        <TextView
            android:id="@+id/settings_username_title"
            android:layout_below="@id/settings_webdav_media_path_value"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ECF0F1"
            android:textSize="16sp"
            android:text="Username:" />

        <EditText
            android:id="@+id/settings_username_value"
            android:hint="@string/username_input_box_hint"
            android:layout_below="@id/settings_username_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#ECF0F1"
            android:height="48dp"
            android:width="300dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:ems="10" />

        <TextView
            android:id="@+id/settings_password_title"
            android:layout_below="@id/settings_username_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#ECF0F1"
            android:textSize="16sp"
            android:text="Password:" />

        <EditText
            android:id="@+id/settings_password_value"
            android:layout_width="wrap_content"
            android:layout_below="@id/settings_password_title"
            android:hint="@string/password_input_box_hint"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="#ECF0F1"
            android:height="48dp"
            android:width="300dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:ems="10" />

        <Button
            android:id="@+id/settings_credentials_save_btn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_below="@id/settings_password_value"
            android:layout_marginTop="40sp"
            android:backgroundTint="#C50808"
            android:text="SAVE"
            android:textColor="#ECF0F1"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>
